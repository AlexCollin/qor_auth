<div style="margin:auto; text-align: center;">
  <h2>Change your password</h2>

  {{$flashes := .Flashes}}
  {{if $flashes}}
    <ul>
      {{range $flash := $flashes}}
        <li>{{$flash.Message}}</li>
      {{end}}
    </ul>
  {{end}}

  <div>
    <form action="{{.AuthURL "database/password/recover"}}" method="POST">
      <input type="hidden" name="reset_password_token" value="{{reset_password_token}}">

      <div>
        New Password:  <input name="password">
      </div>

      <div>
        Confirm new password:  <input name="password">
      </div>

      <input type="submit">
    </form>
  </div>

  <div>
    <a href="{{.AuthURL "login"}}">Sign in</a>
  </div>
</div>

